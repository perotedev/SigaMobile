<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sigamobile">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage"
    />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".websercives.HostDefinition"
        android:allowBackup="true"
        android:icon="@mipmap/siga_mobile_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/siga_mobile_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SigaMobile">

        <activity android:name=".views.SetIpView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.SplashView"
            android:screenOrientation="portrait"
        />
        <activity
            android:name=".views.LoginView"
            android:screenOrientation="portrait"
        />
        <activity
            android:name=".views.MainMenu"
            android:screenOrientation="portrait"
        />
        <activity
            android:name=".views.CheckRegistrationView"
            android:screenOrientation="portrait"
        />
        <activity
            android:name=".views.CreateUserView"
            android:screenOrientation="portrait"
        />

    </application>

</manifest>