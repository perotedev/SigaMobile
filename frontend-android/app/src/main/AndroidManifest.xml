<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sigamobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/siga_mobile_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/siga_mobile_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SigaMobile">

        <activity android:name=".views.SplashView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.LoginView"
            android:screenOrientation="portrait"
        />

    </application>

</manifest>